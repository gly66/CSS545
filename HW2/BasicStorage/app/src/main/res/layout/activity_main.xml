<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSaveMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Media"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnLoadMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Media"
        android:layout_below="@id/btnSaveMedia"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/editTextSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSaveSetting"
        android:layout_marginTop="-48dp"
        android:hint="User Setting"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnSaveSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Setting"
        android:layout_below="@id/btnLoadMedia"
        android:layout_alignStart="@id/btnLoadMedia"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/loadTextSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Load Setting"
        android:layout_below="@id/btnSaveSetting"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnLoadSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Setting"
        android:layout_below="@id/btnSaveSetting"
        android:layout_alignStart="@id/btnLoadMedia"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btnLoadSetting"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageViewLoad"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btnLoadSetting"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

</RelativeLayout>
